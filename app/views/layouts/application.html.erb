<!DOCTYPE html>
<html>
  <head>
    <title>Augustus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('Favicon.png') %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface|Cinzel|Comfortaa|Libre+Baskerville|Noticia+Text|Noto+Serif|Open+Sans|Righteous|Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
        }
      </script>
    <% end%>

    <script>
      window.logoURL = "<%= image_url('Favicon.png') %>";
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
